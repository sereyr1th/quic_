{
  "server": {
    "httpPort": 8080,
    "httpsPort": 9443,
    "readTimeout": 10000000000,
    "writeTimeout": 10000000000,
    "maxIdleTime": 60000000000
  },
  "loadBalancer": {
    "strategy": "round_robin",
    "healthCheck": {
      "enabled": true,
      "interval": 30000000000,
      "timeout": 5000000000,
      "healthyThreshold": 2,
      "unhealthyThreshold": 3,
      "path": "/admin/cli/healthcheck.php"
    },
    "backendServers": [
      {
        "id": "moodle-1",
        "host": "localhost",
        "port": 8081,
        "weight": 1,
        "healthy": true,
        "lastCheck": "0001-01-01T00:00:00Z"
      }
    ],
    "sessionPersistence": true,
    "connectionMigration": true
  },
  "moodle": {
    "dataRoot": "/var/moodledata",
    "wwwRoot": "/var/www/moodle",
    "sessionCookie": "MoodleSession",
    "proxyHeaders": {
      "X-Forwarded-For": "$remote_addr",
      "X-Forwarded-Host": "$host",
      "X-Forwarded-Proto": "$scheme",
      "X-Real-IP": "$remote_addr"
    },
    "phpFpmSocket": "/run/php/php8.2-fpm.sock",
    "enableCaching": true
  },
  "tls": {
    "certFile": "localhost+2.pem",
    "keyFile": "localhost+2-key.pem",
    "minVersion": "1.2",
    "maxVersion": "1.3",
    "nextProtos": [
      "h3",
      "h2",
      "http/1.1"
    ],
    "enableH3": true,
    "enableH2": true,
    "enableH1": true
  },
  "logging": {
    "level": "info",
    "format": "json",
    "enableMetrics": true,
    "logConnections": true,
    "logMigrations": true
  }
}